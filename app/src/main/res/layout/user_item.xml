<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_primary"
    android:paddingTop="5dp"
    >

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/user_icon_image_view"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_icon_image_view"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_user_title" />

    <TextView
        android:id="@+id/url_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_text_view"
        android:layout_toEndOf="@id/user_icon_image_view"
        android:maxLines="1"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/url_text_view"
        android:layout_toEndOf="@id/user_icon_image_view"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_rank_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_2"
            android:text="@string/rank"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            />


        <!--<TextView-->
            <!--android:id="@+id/is_admin_title_text_view"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/size_5"-->
            <!--android:text="@string/site_admin"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="@dimen/text_size_small"-->
            <!--android:textStyle="bold"-->
            <!--android:typeface="serif" />-->

        <TextView
            android:id="@+id/is_admin_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
           />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_divider"
        android:layout_below="@id/user_icon_image_view"
        android:background="@android:color/darker_gray" />


</RelativeLayout>